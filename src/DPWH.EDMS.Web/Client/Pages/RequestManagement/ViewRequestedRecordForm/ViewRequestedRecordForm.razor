@page "/request-management/requested-record/{RequestId}/{DocumentId}"
@inherits ViewRequestedRecordFormBase


<TelerikMediaQuery Media="(max-width: 480px)" OnChange="((changed) => XSmall = changed)"></TelerikMediaQuery>
<EdmsBreadcrumbs Data="@BreadcrumbItems" />
<EdmsLoader Visible="IsLoading" />

@if (RequestedRecord != null)
{
    <div class="d-flex justify-content-between pt-3" style="width: 22cm; margin-left: auto; margin-right: auto;">
        <h3>@RequestedRecord.RecordType</h3>
         
        <TelerikButton 
            Class="mb-2"
            Icon="@SvgIcon.Signature"
            ThemeColor="@ThemeConstants.Button.ThemeColor.Primary">
                  Signature
        </TelerikButton>
    </div>
    <div class="container page-legal-size">
        @if (!string.IsNullOrEmpty(RequestedRecord.Uri))
        {
            <iframe src="@RequestedRecord.Uri" height="100%" width="100%" title="@RequestedRecord.RecordType"></iframe>
        }
    </div>
}
 
<style>
    .page-legal-size {
        height: 1108px;
        padding: 0.8cm;
        width: 834px;
        margin: 1cm auto;
        font-size: 14px;
        border: 1px #D3D3D3 solid;
        border-radius: 5px;
        background: white;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }
</style>