<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings.json" />
    <None Remove="Scripts\01\01-Schema-Configs.sql" />
    <None Remove="Scripts\01\01-Schema-Create.sql" />
    <None Remove="Scripts\01\01-Seed.sql" />
    <None Remove="Scripts\01\03-Schema-AddChangeLogs.sql" />
    <None Remove="Scripts\01\04-Sequence-ControlNo.sql" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
